<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/cali_waves"
    android:cacheColorHint="#00000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/bar_right_padding"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:src="@drawable/gradient_overlay"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="250dp"
        android:layout_marginBottom="@dimen/globe_lower_padding">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cali_dreamz"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient_overlay" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_background"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:shadowColor="#000000"
        android:shadowDx="2.5"
        android:shadowDy="1.5"
        android:shadowRadius="2"
        android:text="@string/jason_worrell_n_jsworrell_syr_edu"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingVertical="2dp"
        android:layout_marginStart="@dimen/bar_left_padding"
        android:layout_marginEnd="0dp"
        tools:ignore="RtlSymmetry" />


</LinearLayout>